<UserControl x:Class="_4_TermPaper.DigitalInstrument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4_TermPaper"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="150">

    <Grid>
        <Label 
            x:Name="MyValue"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Width="150" Height="50" FontSize="25" FontFamily="pack://_4_TermPaper/Fonts/MyFonts TTF"
            Foreground="White"/>

        <Label 
            VerticalAlignment="Bottom"
            Width="150" Height="30" 
            HorizontalContentAlignment="Right"
            Content="{Binding digital.Unit}" FontSize="17"
            Foreground="White"/>
    </Grid>
</UserControl>
